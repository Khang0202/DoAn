<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="340dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/border_dialog">
    <TextView
        android:background="@drawable/report_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Report"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textAlignment="center"/>
    <LinearLayout
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_gravity="center"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="Place: "
            android:layout_width="56dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/txtMarkerDialogPlaces"
            android:layout_marginLeft="16dp"
            android:layout_gravity="center"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="ab
            ấccascsa
            áccacsacasáccascasacscascascascas

            áccscasca
            scascascas

            cacsacascascascascascascscascsacsac
            áccac"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>
    <LinearLayout
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_gravity="center"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="Coordinates: "
            android:layout_width="120dp"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txtMarkerDialogLatitude"
                android:padding="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="10.0"
                android:textAlignment="center"/>
            <TextView
                android:id="@+id/txtMarkerDialogLongitude"
                android:padding="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="10.0"
                android:textAlignment="center"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btnMarkerDialogAddImage"
            android:layout_margin="12dp"
            android:textColor="@color/white"
            android:background="@drawable/border_button"
            android:text="Add Image"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/btnMarkerDialogSave"
            android:layout_margin="12dp"
            android:textColor="@color/white"
            android:background="@drawable/border_button_alert"
            android:text="Save"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>